{{> header}}
<main class="initial-page-main">
    <table class="initial-form-table">
        <tr>
            <th colspan="2" class="initial-table-title">Post Operation Form</th>
        </tr>
        <tr>
            <td class="initial-table-tag">Username: </td>
            <td class="initial-table-content"><input type="text" name="username" value="" placeholder="Enter Username"></td>
        </tr>
        <tr>
            <td class="initial-table-tag">Password: </td>
            <td class="initial-table-content"><input type="password" name="password" value="" placeholder="Enter Password"></td>
        </tr>
        <tr>
            <td class="initial-table-tag">Purpose: </td>
            <td class="initial-table-content">
                <select class="" name="">
                    <option selected="true" disabled>Select one purpose</option>
                    <option>Query</option>
                    <option>Purchase</option>
                </select>
            </td>
        </tr>
        <tr>
            <td class="initial-table-tag"><button type="button" name="clear">Clear</button></td>
            <td class="initial-table-content"><button type="button" name="submit">Submit</button></td>
        </tr>
    </table>
</main>
{{> footer}}
