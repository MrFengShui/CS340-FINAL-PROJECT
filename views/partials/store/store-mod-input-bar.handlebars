<table class="query-input-bar">
    <tr>
        <td class="query-input-bar-tag">ID</td>
        <td><input type="text" name="bookid" value="" id="staff-store-input-bookid"></td>
        <td class="query-input-bar-tag">Name</td>
        <td><input type="text" name="bookname" value="" id="staff-store-input-bookname"></td>
        <td class="query-input-bar-tag">Type</td>
        <td>
            <select class="" name="" id="staff-store-select-booktype">
                <option selected="true" value="0" disabled>Select one book type</option>
                <option value="0">Any Type</option>
                <option value="1">Art</option>
                <option value="2">Engineering</option>
                <option value="3">History</option>
                <option value="4">Literature</option>
                <option value="5">Science</option>
            </select>
        </td>
    </tr>
    <tr>
        <td class="query-input-bar-tag">ISBN</td>
        <td><input type="text" name="bookisbn" value="" id="staff-store-input-bookisb"></td>
        <td class="query-input-bar-tag">Repository</td>
        <td><input type="text" name="repoid" value="" id="staff-store-input-repoid"></td>
        <td class="query-input-bar-tag">Address</td>
        <td><input type="text" name="repoaddress" value="" id="staff-store-input-address"></td>
    </tr>
    <tr>
        <td class="query-input-bar-tag">Purpose</td>
        <td>
            <select id="staff-store-select-purpose" name="">
                <option selected="true" value="0" disabled>Select one Repository purpose</option>
                <option value="0">Any Purpose</option>
                <option value="1">Art, Engineering</option>
                <option value="2">Engineering, History</option>
                <option value="3">History, Literature</option>
                <option value="4">Literature, Science</option>
                <option value="5">Science</option>
            </select>
        </td>
        <td colspan="4"><button type="button" name="dosearch" id="staff-store-search-button">Search</button></td>
    </tr>
</table>
