<div class="modal-dialog-backdrop" id="book-modal-backdrop"></div>
<div class="modal-dialog-frame" id="book-modal-framework">
    <div class="modal-dialog-main">
        <div class="modal-dialog-title">
            <h1>Insert New Book Information</h1>
            <button type="button" id="book-modal-close-button"><i class="fa fa-times" aria-hidden="true"></i></button>
        </div>
        <table>
            <tr class="modal-dialog-input">
                <td class="modal-input-tag">Book ID</td>
                <td class="modal-input-text"><input type="text" name="bookid" id="book-modal-input-bookid"></td>
            </tr>
            <tr class="modal-dialog-input">
                <td class="modal-input-tag">Book Name</td>
                <td class="modal-input-text"><input type="text" name="bookname" id="book-modal-input-bookname"></td>
            </tr>
            <tr class="modal-dialog-input">
                <td class="modal-input-tag">Book Type</td>
                <td class="modal-input-text">
                    <select id="book-modal-select-booktype" name="">
                        <option selected="true" value="0" disabled>Select one book type</option>
                        <option value="0">Any Type</option>
                        <option value="1">Art</option>
                        <option value="2">Engineering</option>
                        <option value="3">History</option>
                        <option value="4">Literature</option>
                        <option value="5">Science</option>
                    </select>
                </td>
            </tr>
            <tr class="modal-dialog-input">
                <td class="modal-input-tag">Book Author</td>
                <td class="modal-input-text"><input type="text" name="bookauthor" id="book-modal-input-bookauthor"></td>
            </tr>
            <tr class="modal-dialog-input">
                <td class="modal-input-tag">Book Edition</td>
                <td class="modal-input-text"><input type="text" name="bookedition" id="book-modal-input-bookedition"></td>
            </tr>
            <tr class="modal-dialog-input">
                <td class="modal-input-tag">Book Date</td>
                <td class="modal-input-text"><input type="date" name="bookdate" value="" id="book-modal-input-bookdate"></td>
            </tr>
            <tr class="modal-dialog-input">
                <td class="modal-input-tag">Book Press</td>
                <td class="modal-input-text">
                    <select id="book-modal-select-bookpress" name="">
                        <option selected="true" value="anypress" disabled>Select one publish press</option>
                        <option value="anypress">Any Press</option>
                        <option value="apress">Apress</option>
                        <option value="pearson">Pearson</option>
                        <option value="oreilly">O'Reilly Media</option>
                        <option value="addison">Addison-Wesley Professional</option>
                        <option value="nostarch">No Starch Press</option>
                        <option value="scholastic">Scholastic</option>
                        <option value="createspace">CreateSpace Independent Publishing Platform</option>
                        <option value="scribner">Scribner</option>
                        <option value="dover">Dover Publications</option>
                        <option value="cambridge">Cambridge University Press</option>
                        <option value="britannica">Encyclopaedia Britannica</option>
                        <option value="brooks">Brooks Cole</option>
                    </select>
                </td>
            </tr>
            <tr class="modal-dialog-input">
                <td class="modal-input-tag">Book ISBN</td>
                <td class="modal-input-text"><input type="text" name="bookisbn" id="book-modal-input-bookisbn"></td>
            </tr>
            <tr class="modal-dialog-input">
                <td class="modal-input-tag">Book Price</td>
                <td class="modal-input-text"><input type="number" step="0.01" min="0" max="100000" name="bookprice" value="0" id="book-modal-input-bookprice"></td>
            </tr>
            <tr class="modal-dialog-input">
                <td class="modal-input-tag">Book Quantity</td>
                <td class="modal-input-text"><input type="number" step="1" min="0" max="100" name="bookquantity" value="0" id="book-modal-input-bookquantity"></td>
            </tr>
            <tr class="modal-dialog-button">
                <td colspan="4">
                    <ul>
                        <li><a href="#" id="book-modal-button-insert">Insert</a></li>
                        <li><a href="#" id="book-modal-button-add">Add</a></li>
                        <li><a href="#" id="book-modal-button-update">Update</a></li>
                        <li><a href="#" id="book-modal-button-clear">Clear</a></li>
                    </ul>
                </td>
            </tr>
        </table>
    </div>
</div>
