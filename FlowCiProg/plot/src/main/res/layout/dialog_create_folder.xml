<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_folder_dialog"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.thermofisher.flowci.CreateFolderDialog">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="Filename:"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" />

        <EditText
            android:id="@+id/flowci_create_folder_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/flowci_create_folder_button"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Create" />

        <Button
            android:id="@+id/flowci_close_dialog_button"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Cancel" />

    </LinearLayout>

</LinearLayout>
