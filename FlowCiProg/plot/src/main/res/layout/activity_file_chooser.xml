<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="3"
    android:columnCount="3"
    android:padding="5dp"
    tools:context="com.thermofisher.flowci.FileChooserActivity">

    <Button
        android:text="Return to Main Page"
        android:layout_row="0"
        android:layout_column="0"
        android:id="@+id/flowci_return_main_button" />

    <Button
        android:text="Refresh Current Directory"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:id="@+id/flowci_refresh_file_button" />

    <Button
        android:text="Goto Upper Directory"
        android:layout_row="0"
        android:layout_column="2"
        android:id="@+id/flowci_upper_level_button" />

    <ListView
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:id="@+id/flowci_fcs_file_listview" />

</GridLayout>